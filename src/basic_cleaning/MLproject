name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: the input artifact for cleaning
        type: string

      output_artifact:
        description: the name of the output artifact produced
        type: string

      output_type:
        description: type of the output artifact
        type: string

      output_description:
        description: a description of the output artifact
        type: string

      min_price:
        description: minimum price to consider
        type: float

      max_price:
        description: maximum price to consider
        type: float

      min_nights:
        description: minimum number of minimum_nights to consider
        type: float

      max_nights:
        description: maximum number of minimum_nights to consider
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type} --output_description {output_description} --min_price {min_price} --max_price {max_price} --min_nights {min_nights} --max_nights {max_nights}
